@page "/login"
@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.JSInterop
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Sign In - CritterSupply</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-6">
        <MudText Typo="Typo.h4" GutterBottom="true" Align="Align.Center">Sign In</MudText>
        <MudText Typo="Typo.body2" Align="Align.Center" Class="mb-6" Color="Color.Secondary">
            Welcome back to CritterSupply!
        </MudText>

        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudTextField @bind-Value="_email"
                          Label="Email"
                          Variant="Variant.Outlined"
                          Required="true"
                          RequiredError="Email is required"
                          Validation="@(new Func<string, string?>(ValidateEmail))"
                          Immediate="true"
                          Class="mb-4" />

            <MudTextField @bind-Value="_password"
                          Label="Password"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Required="true"
                          RequiredError="Password is required"
                          Immediate="true"
                          Class="mb-4" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       OnClick="HandleLogin"
                       Disabled="_isLoading">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </MudButton>
        </MudForm>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">
            Demo users: alice@critter.test, bob@critter.test, charlie@critter.test<br />
            Password: <em>password</em>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private MudForm? _form;
    private bool _formIsValid = false;
    private string _email = "";
    private string _password = "";
    private bool _isLoading = false;

    [Parameter]
    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private async Task HandleLogin()
    {
        if (_form == null)
        {
            Console.WriteLine("Form is null!");
            Snackbar.Add("Form not initialized", Severity.Error);
            return;
        }

        // Trigger form validation
        await _form.Validate();

        if (!_form.IsValid)
        {
            Console.WriteLine($"Form validation failed! IsValid: {_form.IsValid}");
            Snackbar.Add("Please fix validation errors", Severity.Warning);
            return;
        }

        _isLoading = true;
        StateHasChanged();

        try
        {
            // Use JavaScript fetch via browser to call server-side login endpoint
            // This ensures the browser receives and stores the authentication cookie
            var result = await JS.InvokeAsync<LoginResult>("authHelper.login", _email, _password);

            if (result != null && result.Success)
            {
                Snackbar.Add($"Welcome back, {result.FirstName}!", Severity.Success);

                // Force full page reload to reinitialize authentication state
                Navigation.NavigateTo(ReturnUrl ?? "/", forceLoad: true);
            }
            else if (result != null && !result.Success)
            {
                Snackbar.Add("Invalid email or password", Severity.Error);
            }
            else
            {
                Snackbar.Add("Login failed. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Login error: {ex}");
            Snackbar.Add($"Login failed: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private string? ValidateEmail(string email)
    {
        if (string.IsNullOrWhiteSpace(email))
            return "Email is required";

        if (!email.Contains("@"))
            return "Please enter a valid email address";

        return null;
    }

    private sealed record LoginResult(bool Success, string FirstName);
}
